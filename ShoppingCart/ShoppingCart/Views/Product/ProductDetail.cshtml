@{
    Layout = "~/Views/Layout/SharedLayout.cshtml";   
    ViewBag.Title = "ProductDetail";
}


@section main {
    <div class="content">
        <div class="content_top">
            <div class="back-links">
                <p>
                    <a href="@Url.Action("Index", "Home")">Home</a> >>>>
                    <a href="@Url.Action("ProductByCategory", "Category", new { @Model.CategoryID })">
                        @Html.Action("GetCategory", "Category", new { @Model.CategoryID })
                    </a>
                </p>
            </div>
            <div class="clear"></div>
        </div>

        <div class="section group">
            <div class="cont-desc span_1_of_2">

                @Html.Action("ProductDetailPartial", "Product", new { @Model.ProductID })

                <div class="content_bottom">
                    <div class="heading">
                        <h3>Related Products</h3>
                    </div>
                    <div class="clear"></div>
                </div>

                <div class="section group">
                    @Html.Action("RelatedProductListPartial", "Product", new { @Model.ProductID, @Model.CategoryID })
                </div>

            </div>

            <div class="rightsidebar span_3_of_1">
                <h2>CATEGORIES</h2>
                <ul>
                    @Html.Action("CategoryPartial", "Category")
                </ul>
            </div>
        </div>
    </div>
}