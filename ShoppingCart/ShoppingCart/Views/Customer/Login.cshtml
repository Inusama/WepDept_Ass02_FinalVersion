
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/SharedLayout.cshtml";
}

@section main { 
    <h1>@ViewBag.Respond</h1>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal" >
            <label style="font-family:'ambleregular'; margin-left:45%; font-size:x-large; color:#B81D22 ;">LOGIN FORM</label>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("UserName", null, new { @class = "control-label col-md-2" })


                <div class="col-md-10">

                    @Html.TextBox("TxtUserName", null, new { @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                @Html.Label("PassWord", null, new { @class = "control-label col-md-2" })


                <div class="col-md-10" style="display:inline">
                    @Html.Password("TxtPassWord", null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="BtSubmit" name="BtSubmit" style="color:#ffffff; background-color:#B81D22;border-radius:10px;" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
