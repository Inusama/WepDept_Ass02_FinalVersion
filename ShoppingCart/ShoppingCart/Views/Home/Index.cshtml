@{
    Layout = "~/Views/Layout/SharedLayout.cshtml";     
    ViewBag.Title = "Home Page";
}

@section header_slide {
    <div class="header_bottom_left">
        <div class="categories">
            <ul>
                <h3>Categories</h3>
                @Html.Action("CategoryPartial", "Category")
            </ul>
        </div>
    </div>
    <div class="header_bottom_right">
        <div id="slider" class="nivoSlider">
            <img src="~/images/delivery-img3.jpg" />
            <img src="~/images/delivery-img2.jpg" />
            <img src="~/images/delivery-img1.jpg" />
        </div>
    </div>
    <div class="clear"></div>
}

@section main {
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>New Products</h3>
            </div>
            <div class="clear"></div>
        </div>

        <div class="section group">
            @Html.Action("ProductListPartial", "Product", new { id = 1 })
        </div>

        <div class="content_bottom">
            <div class="heading">
                <h3>Feature Products</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @Html.Action("ProductListPartial", "Product", new { id = 2 })
        </div>
    </div>
}